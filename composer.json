{
	"name"			: "ipub/doctrine-crud",
	"type"			: "library",
	"description"	: "Extension of Kdyby/Doctrine with CRUD",
	"keywords"		: ["doctrine2", "doctrine", "crud", "nette", "ipub", "framework", "tools"],
	"homepage"		: "https://github.com/iPublikuj/doctrine-crud",
	"license"		: ["GPL-2.0", "GPL-3.0"],

	"authors": [
		{
			"name"		: "iPublikuj:cms",
			"email"		: "info@ipublikuj.eu",
			"homepage"	: "http://www.ipublikuj.eu/"
		}
	],

	"support": {
		"email"		:"support@ipublikuj.eu",
		"issues"	:"https://github.com/iPublikuj/doctrine-crud/issues"
	},

	"extra": {
		"ipub"	: {
			"configuration" : {
				"extensions" : {
					"doctrineCrud" : "IPub\\DoctrineCrud\\DI\\DoctrineCrudExtension"
				}
			}
		}
	},

	"require": {
		"php"	: ">=7.1.0",

		"doctrine/orm"	: "~2.5",

		"nette/di"			: "~2.4",
		"nette/utils"		: "~2.4",
		"nette/reflection"	: "~2.4"
	},

	"require-dev": {
		"nette/bootstrap"		: "~2.4",
		"nette/http"			: "~2.4",
		"nette/mail"			: "~2.4",
		"nette/robot-loader"	: "~2.4",
		"nette/safe-stream"		: "~2.3",
		"nette/tester"			: "~2.0",

		"tracy/tracy"	: "~2.4",

		"kdyby/doctrine"	: "@dev",
		"kdyby/events"		: "@dev",

		"pds/skeleton"	: "~1.0"
	},

	"autoload": {
		"psr-0": {
			"IPub\\DoctrineCrud\\": "src/"
		}
	}
}
